{
    "compilerOptions": {
        "outDir": "./built/",
        "sourceMap": true,
        "strict": true,
        "module": "es2015",
        "moduleResolution": "node",
        "target": "es5",
        "experimentalDecorators": true,
        "allowSyntheticDefaultImports": true,
        "baseUrl": ".",
        "paths": {
          "@components/*": ["./src/components/*"],
          "@store/*": ["./src/store/*"],
          "@store": ["./src/store"],
          "@/*": ["./src/*"]
        }
    },
    "include": [
        "./src/**/*"
    ]
}